<div class="build_details">
    <h2><b><%= @build["name"] %></b></h2>
    <h5><div class="build_info"><b>Info:</b><br/><br/> <%= @build["description"] %></div></h5>

    <table style="width:90%;" class="mainTable">
        <tr class="InfoTable">
            <style>
	     td {
                 border: 12px solid #fff;
		 height: 45px;
	     }
            </style>

        </tr>
        <tr class="infoHeadings">
            <th></th>
            <th>Component</th>
            <th>Name</th>
            <th>Part Price</th>
        </tr>

	<% @build["parts"].each do |part| %>
            <tr>
                <td>
		    <% if File.exists?(settings.root+"/public/lib/images/icons/"+part["type"].downcase.gsub(" ", "-")+".jpg") %>
			<img class="component"" src=<%="/lib/images/icons/"+part["type"].downcase.gsub(" ", "-")+".jpg"%> alt="some_text">
		    <% end %>
		</td>
                <td><%= part["type"] %></td>
                <td><%= part["name"]%></td>
                <td><%= part["price"]%></td>
            </tr>
	<% end %>

	<tr>
	    <td></td>
	    <td></td>
	    <td></td>
	    <td><b><%= @build["total_price"] %></b></td>
	</tr>

    </table>
</div>
